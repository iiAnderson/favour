{
  "manifest_version": 2,

  "name": "Favour",
  "description": "A Web Extension for adding favourites folders to Imgur",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
"content_scripts": [
    {
      "matches": ["http://www.imgur.com/gallery/*"],
      "js": ["my-script.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
  ]
}